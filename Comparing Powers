#include <iostream>

using namespace std;

int main() {

int T;
cin >> T;

while(T--){

long long a,b,n;

cin >> a >> b >> n;

if(n==0 || a==b){

cout << 0<<endl;

}

else if(n%2 == 0){

if(a<0){

a = a*(-1);

} else if(b<0){

b = b*(-1);

}

if(a<b){

cout << 2 << endl;

}

else if(a>b){

cout << 1<< endl;

}

else {

cout << 0 << endl;

}

}

else

if(a<b){

cout << 2 << endl;

}

else if(a>b){

cout << 1<< endl;

}

else {

cout << 0 << endl;

}

}

    return 0;

}
