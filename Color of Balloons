#include <iostream>
#include<string.h>
#include<math.h>
using namespace std;
int main() {
   int testcases;
   cin>>testcases;
   
   while(testcases--){
       
     string ss;
 
        cin >> ss;
        int len=ss.size();
   ;
   int arr[2]={0};
   
   for(int i=0;i<len;i++){
       
       if(ss[i]=='a' ){
           arr[0]++;
       }
       else if(ss[i]=='b' ){
           arr[1]++;
       }
   }cout<<min(arr[0],arr[1])<<endl;
   
  }
    return 0;
}
