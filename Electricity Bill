#include <iostream>
#include<iomanip>
using namespace std;
int main() {
  int n;
  cin>>n;
  float sum=0;
 if(n>0 && n<=50){
     sum+=(n*.50);
    
 }
 else if(n>50 && n<=150){
     sum=25;
     sum+=((n-50)*.75);
    
 }
 else if(n>150 && n<=250){
      sum=100;
     sum+=((n-150)*1.20);
     
     
 }
 else if(n>250){
      sum=220;
      sum+=((n-250)*1.50);
     
 }
  sum*=1.20;
cout <<fixed <<setprecision(2) <<sum  ;
    return 0;
}
